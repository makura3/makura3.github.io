<%# 記事が存在する場合 %>
<% if(page.posts && page.posts.length){ %>
  <% page.posts.forEach(function (post, i) { %>
    <article class="post">
      <div class="post-content">
        <a href="<%- url_for(post.link) %>" class="post-link">
          <div class="post-head">
              <h2 class="post-title">
                <%- post.title %>
              </h2>
              <div class="post-meta">
                  <time class="post-date" datetime="" title="">
                      <%- date(post.date,"YYYY年MM月DD日") %>
                  </time>
              </div>
          </div>
          <p class="brief">
              <% if(post.excerpt) { %>
                  <%= strip_html(post.excerpt) + '…' %>
              <% } else { %>
                  <%= truncate(strip_html(post.content), {length: theme.excerptLength || 120, separator: ''}) %>
              <% } %>
          </p>
        </a>
      </div>
    </article>
  <% }) %>
<% } else { %>
  <p>きじがないです</p>
<% } %>